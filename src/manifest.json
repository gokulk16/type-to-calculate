{
  "manifest_version": 3,
  "name": "Type To Calulate",
  "description": "Just type in keyboard and do the math. No need to open the calculator.",
  "version": "1.0",
  "icons": {
    "16": "./assets/images/favicon/favicon-16.png",
    "32": "./assets/images/favicon/favicon-32.png",
    "48": "./assets/images/favicon/favicon-48.png",
    "128": "./assets/images/favicon/favicon-150.png"
  },
  "author": "gokulkathiresan1@gmail.com",
  "default_locale": "en",

  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/images/favicon/favicon-32.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      }
    }
  }
}
